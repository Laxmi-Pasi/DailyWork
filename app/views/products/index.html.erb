<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.price %></td>
        <td><%= link_to "Show", s %></td>
        <td><%= link_to "Edit", edit_product_path(s) %></td>
        <td><%= link_to "Destroy", s, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

